<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddJobActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginVertical="50dp">

            <EditText
                android:id="@+id/edt_job_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_rect"
                android:hint="Enter Job Name"
                android:padding="15dp"
                android:text="Job1"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/edt_org"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edt_org"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_rect"
                android:hint="Enter Organisation"
                android:padding="15dp"
                android:textSize="12sp"
                android:text="TCS"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_job_name"
                app:layout_constraintBottom_toTopOf="@+id/edt_mobile"/>

            <EditText
                android:id="@+id/edt_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_rect"
                android:hint="Enter Mobile Number"
                android:padding="15dp"
                android:textSize="12sp"
                android:maxLength="10"
                android:inputType="phone"
                android:text="1234567890"
                app:layout_constraintEnd_toEndOf="@+id/edt_org"
                app:layout_constraintStart_toStartOf="@+id/edt_org"
                app:layout_constraintTop_toBottomOf="@+id/edt_org"
                app:layout_constraintBottom_toTopOf="@+id/edt_email"/>
            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_rect"
                android:hint="Enter Mobile Number"
                android:padding="15dp"
                android:textSize="12sp"
                android:maxLength="10"
                android:inputType="textEmailAddress"
                android:text="test@email.com"
                app:layout_constraintEnd_toEndOf="@+id/edt_mobile"
                app:layout_constraintStart_toStartOf="@+id/edt_mobile"
                app:layout_constraintTop_toBottomOf="@+id/edt_mobile"
                app:layout_constraintBottom_toTopOf="@+id/edt_skills"/>


            <EditText
                android:id="@+id/edt_skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_rect"
                android:hint="Enter Required Skills"
                android:padding="15dp"
                android:textSize="12sp"
                android:maxLength="10"
                android:inputType="textPersonName"
                android:text="Java"
                app:layout_constraintEnd_toEndOf="@+id/edt_email"
                app:layout_constraintStart_toStartOf="@+id/edt_email"
                app:layout_constraintTop_toBottomOf="@+id/edt_email" />

            <EditText
                android:id="@+id/edt_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_rect"
                android:hint="Enter Package"
                android:padding="15dp"
                android:textSize="12sp"
                android:maxLength="10"
                android:inputType="textPersonName"
                android:text="30000"
                app:layout_constraintEnd_toEndOf="@+id/edt_skills"
                app:layout_constraintStart_toStartOf="@+id/edt_skills"
                app:layout_constraintTop_toBottomOf="@+id/edt_skills" />

            <EditText
                android:id="@+id/edt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_rect"
                android:hint="Enter Address"
                android:padding="15dp"
                android:maxLines="3"
                android:textSize="12sp"
                android:maxLength="10"
                android:inputType="textPersonName"
                android:text="Anantapur"
                app:layout_constraintEnd_toEndOf="@+id/edt_package"
                app:layout_constraintStart_toStartOf="@+id/edt_package"
                app:layout_constraintTop_toBottomOf="@+id/edt_package"
                app:layout_constraintBottom_toTopOf="@+id/btn_add_job"/>

            <Button
                android:id="@+id/btn_add_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Job"
                android:padding="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginVertical="20dp"
                app:layout_constraintEnd_toEndOf="@+id/edt_address"
                app:layout_constraintStart_toStartOf="@+id/edt_address"
                app:layout_constraintTop_toBottomOf="@+id/edt_address"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>